<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel
 border="true"
 follows="all"
 height="408"
 label="Crash Reports"
 layout="topleft"
 left="102"
 name="crash_reports"
 top="1"
 width="517">
  <text
    follows="left|top"
    font.style="BOLD"
    height="15"
    layout="topleft"
    left="30"
    length="1"
    name="crash_reports_text"
    top_pad="11"
    type="string"
    width="400">
     Crash Reports
   </text>
    <check_box
     control_name="CrashSubmitBehavior"
     follows="top|left"
     height="16"
     label="Send crash reports"
     layout="topleft"
     left="60"
     name="send_reports_check"
     parse_urls="false"
     top_pad="5"
     width="275"
     />

    <check_box
     control_name="CrashSubmitSettings"
     enabled_control="CrashSubmitBehavior"
     follows="top|left"
     height="16"
     label="Include settings"
     layout="topleft"
     left_delta="30"
     name="send_settings_check"
     tool_tip="Including your settings makes it easier for us to either reproduce your crash or narrow down the cause of it"
     top_pad="4"
     width="130"
     />
    <check_box
     control_name="CrashSubmitName"
     enabled_control="CrashSubmitBehavior"
     follows="top|left"
     height="16"
     label="Include Second Life name"
     layout="topleft"
     left_delta="0"
     name="send_name_check"
     tool_tip="Including your name helps us to collate persistent crashes and allows us to contact you if we have questions"
     top_pad="4"
     width="160"
     />
    <check_box
     control_name="CrashSubmitLog"
     enabled_control="CrashSubmitBehavior"
     follows="top|left"
     height="16"
     label="Include partial log"
     layout="topleft"
     left_delta="0"
     name="send_log_check"
     top_pad="4"
     width="130"
     />
    <check_box
     control_name="CrashSubmitMetadata"
     enabled_control="CrashSubmitBehavior"
     follows="top|left"
     height="16"
     label="Include last location and active music/media URLs"
     layout="topleft"
     left_delta="0"
     name="send_metadata_check"
     tool_tip="If your crash happens in a specific location, or when you're listening to a particular stream or using media-on-a-prim then check this"
     top_pad="4"
     width="130"
     />

    <text
     follows="top|left"
     height="15"
     layout="topleft"
     left_delta="-10"
     type="string"
     length="1"
     mouse_opaque="false"
     name="crash_info1_text"
     right="-10"
     top_pad="5"
     >
        Unless checked above crash reports only contain information relevant to the crash.
    </text>
    <text
     follows="top|left"
     height="15"
     layout="topleft"
     left_delta="0"
     length="1"
     mouse_opaque="false"
     name="crash_info2_text"
     right="-10"
     top_pad="1"
     type="string"
     >
        Please review the privacy policy at https://docs.catznip.com/contact/privacy_policy.
    </text>

    <text
     font="SansSerif"
     font.style="BOLD"
     follows="bottom|left"
     height="15"
     layout="topleft"
     halign="right"
     left="30"
     length="1"
     mouse_opaque="false"
     name="crash_bugsplat_text"
     top_pad="7"
     type="string"
     width="475">
        Powered by BugSplat
    </text>

</panel>
